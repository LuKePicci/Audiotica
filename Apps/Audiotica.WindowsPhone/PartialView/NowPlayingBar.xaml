<!--                <AppBarToggleButton IsChecked="{Binding IsRepeat, Mode=TwoWay}" Icon="RepeatAll" IsCompact="True" />-->
<!--                <AppBarButton Icon="FullScreen" IsCompact="True" Click="AppBarButton_Click" />-->
<!--            </StackPanel>-->
<!--        </Grid>-->
    </Grid>
</UserControl>