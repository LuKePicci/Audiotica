<Page
    x:Class="Audiotica.PartialView.AudioticaSubscribeSheet"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#1C1C1C">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Background="#FF1C1C1C" BorderThickness="0,0,0,1" BorderBrush="Black">
            <TextBlock Text="Subscribe" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" Margin="0,25,0,10" />
        </Border>

        <Grid Grid.Row="1" Margin="19,9.5,19,0" >
            <StackPanel>
              
                <Button Content="Done" HorizontalAlignment="Stretch" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>