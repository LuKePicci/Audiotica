<audiotica:PageBase
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Audiotica.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:common="using:Audiotica.Core.Common"
    xmlns:userControls="using:Audiotica.Core.UserControls"
    xmlns:audiotica="using:Audiotica"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity" xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:partialView="using:Audiotica.PartialView"
    x:Class="Audiotica.View.HomePage"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding Main, Source={StaticResource Locator}}">

    <Grid>
        <ListView ItemContainerStyle="{StaticResource NoFeedbackListViewItem}" SelectionMode="None" Padding="0,45,0,0">
            <common:MaterialCard common:MaterialCard.IsLoading="{Binding IsSliderLoading}" common:MaterialCard.HeaderText="Spotlight">
                <FlipView MaxHeight="150" ItemsSource="{Binding SpotlightItems}">
                    <FlipView.ItemTemplate>
                        <DataTemplate>
                            <Grid Tapped="Grid_Tapped">
                                <Image Stretch="UniformToFill" Source="{Binding ImageUrl}" />
                                <StackPanel Background="#66000000" VerticalAlignment="Bottom">
                                    <TextBlock Text="{Binding Name}" FontSize="24" Margin="15,5,5,5" Foreground="White" TextTrimming="CharacterEllipsis" />
                                    <TextBlock Text="{Binding Genres[0]}" FontSize="18" Margin="15,5,5,5" Foreground="#89FFFFFF" TextTrimming="CharacterEllipsis" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </FlipView.ItemTemplate>
                </FlipView>
            </common:MaterialCard>

            <common:MaterialCard common:MaterialCard.HeaderText="Collection">
                <!-- material design option -->
                <ListView Height="100" HorizontalAlignment="Center">

                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <Button Style="{StaticResource PlainButtonStyle}">
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Click">
                                <Core:NavigateToPageAction TargetPage="Audiotica.View.CollectionPage"/>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                        <StackPanel Width="75" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE142;" FontSize="30" Foreground="#FF333333" />
                            <TextBlock Text="Music" TextAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <Rectangle Width="1" Fill="#1E000000" />

                    <Button Style="{StaticResource PlainButtonStyle}">
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Click">
                                <Core:NavigateToPageAction TargetPage="Audiotica.View.SearchPage"/>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                        <StackPanel Width="75" VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE11A;" FontSize="30" Foreground="#FF333333" />
                            <TextBlock Text="Search" TextAlignment="Center" />
                        </StackPanel>
                    </Button>

                </ListView>
            </common:MaterialCard>

            <common:MaterialCard common:MaterialCard.IsLoading="{Binding IsFeaturedLoading}" common:MaterialCard.HeaderText="Featured Albums">
                <ListView ItemsSource="{Binding FeatureAlbums}"
					ScrollViewer.HorizontalScrollBarVisibility="Auto"
					ScrollViewer.VerticalScrollBarVisibility="Disabled"
					ScrollViewer.HorizontalScrollMode="Enabled"
					ScrollViewer.VerticalScrollMode="Disabled"
					ScrollViewer.ZoomMode="Disabled"
					SelectionMode="None" IsItemClickEnabled="True" ItemClick="ListView_ItemClick"
					ItemTemplate="{StaticResource XboxAlbumDataTemplate}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                </ListView>
            </common:MaterialCard>

            <common:MaterialCard common:MaterialCard.IsLoading="{Binding IsNewLoading}" common:MaterialCard.HeaderText="New Releases">
                <ListView ItemsSource="{Binding NewAlbums}"
					ScrollViewer.HorizontalScrollBarVisibility="Auto"
					ScrollViewer.VerticalScrollBarVisibility="Disabled"
					ScrollViewer.HorizontalScrollMode="Enabled"
					ScrollViewer.VerticalScrollMode="Disabled"
					ScrollViewer.ZoomMode="Disabled"
					SelectionMode="None"
					IsItemClickEnabled="True" ItemClick="ListView_ItemClick"
					ItemTemplate="{StaticResource XboxAlbumDataTemplate}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                </ListView>
            </common:MaterialCard>
        </ListView>
    </Grid>
</audiotica:PageBase>