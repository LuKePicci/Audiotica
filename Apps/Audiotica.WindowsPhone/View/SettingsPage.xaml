<audiotica:PageBase
    x:Class="Audiotica.View.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:audiotica="using:Audiotica"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding Source={StaticResource Locator}, Path=Settings}">

    <Grid>
        <Pivot Title="SETTINGS" HeaderTemplate="{StaticResource PivotHeaderTemplate}">
            <PivotItem Header="LAST.FM">
                <StackPanel>
                    <TextBox Header="Username" Text="{Binding LastFmUsername, Mode=TwoWay}" />
                    <PasswordBox Header="Password" Password="{Binding LastFmPassword, Mode=TwoWay}" />
                    <Button Content="Login/Logout" Command="{Binding LoginButtonRelay}" HorizontalAlignment="Stretch" Margin="0,0,0,20" />
                    <ToggleSwitch IsOn="{Binding Scrobble, Mode=TwoWay}" IsEnabled="{Binding ScrobbleSwitchEnabled}" Header="Scrobble" />
                </StackPanel>
            </PivotItem>
            <PivotItem Header="ABOUT">

            </PivotItem>
        </Pivot>
    </Grid>
</audiotica:PageBase>